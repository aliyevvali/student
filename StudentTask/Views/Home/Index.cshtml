<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Ad</th>
            <th scope="col">Soyad</th>
            <th scope="col">Fin</th>
            <th scope="col">Müəssisə</th>
            <th scope="col">Qəbul ili</th>
            <th scope="col">Doğum tarixi</th>
            <th colspan="2">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <th scope="row">@(x++)</th>
                <td>@student.Name</td>
                <td>@student.Surname</td>
                <td>@student.Fin</td>
                <td>@student.Enterprise</td>
                <td>@student.StartDate</td>
                <td>@student.DateOfBirth</td>
                <td><a asp-action="Edit" asp-controller="Home" class="btn btn-warning" asp-route-id="@student.Id">Edit</a></td>
                <td><a asp-action="Delete" asp-controller="Home" class="btn btn-danger" asp-route-id="@student.Id">Delete</a></td>
            </tr>

        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
